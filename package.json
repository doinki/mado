    "@types/node": "^22.15.32",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-istanbul": "^3.2.4",
    "esbuild": "^0.25.5",
    "esbuild-plugin-extension": "^0.0.4",
    "eslint": "^9.29.0",
    "eslint-config-mado": "workspace:^",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "publint": "^0.3.12",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
